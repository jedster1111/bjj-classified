{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./tsc-dist",
    "sourceMap": true,
    
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../bjj-common"
    }
  ]
  
}
